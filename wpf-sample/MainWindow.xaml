<Window x:Class="wpf_sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_sample"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="CanResize"
        Title="MainWindow" Height="450" Width="800">
    <WindowChrome.WindowChrome>
        <!--Can Resize에서 상단 라인 없애기 https://stackoverflow.com/questions/36631165/how-to-remove-white-strip-on-top-of-wpf-window-with-windowstyle-none-->
        <WindowChrome CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Background="red" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" >
            <Button Width="20">-</Button>
            <Button Width="20">ㅁ</Button>
            <Button Width="20" Click="CloseButton_Click">x</Button>
        </StackPanel>
    </Grid>

</Window>
